model Queue {
  id          String      @id @default(cuid())
  user        User        @relation(fields: [clerkUserId], references: [clerkUserId], onDelete: Cascade)
  clerkUserId String      @unique
  day         String
  items       QueueItem[]
}

model QueueItem {
  id      String @id @default(cuid())
  time    String
  type    String
  queue   Queue  @relation(fields: [queueId], references: [id], onDelete: Cascade)
  queueId String

  @@index([queueId])
}

enum Platform {
  DEFAULT
  TWITTER
  LINKEDIN
  INSTAGRAM
  LENS_PROTOCOL
  FARCASTER
}

enum TransactionStatus {
  PENDING
  FAILED
  SUCCESSFUL
}

enum TransactionType {
  SUBSCRIPTION_PURCHASE
  REFUND
}

enum RefundStatus {
  NOT_APPLICABLE
  PENDING
  PROCESSED
}

enum Status {
  SAVED
  PUBLISHED
  SCHEDULED
}
