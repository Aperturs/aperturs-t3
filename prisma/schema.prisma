// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider     = "mysql"
  // NOTE: When using postgresql, mysql or sqlserver, uncomment the @db.Text annotations in model Account below
  // Further reading:
  // https://next-auth.js.org/adapters/prisma#create-the-prisma-schema
  // https://www.prisma.io/docs/reference/api-reference/prisma-schema-reference#string
  url          = env("DATABASE_URL")
  relationMode = "prisma"
}


model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

model User {
  id             Int             @id @default(autoincrement())
  clerkUserId    String          @unique
  posts          Post[]
  ideas          Idea[]
  transactions   Transaction[]
  githubTokens   GithubToken[]
  linkedInTokens LinkedInToken[]
  twitterTokens  TwitterToken[]
  subscritpion   Subscription?
  createdAt      DateTime        @default(now())
  updatedAt      DateTime        @updatedAt
  Queue          Queue?
}

model TwitterToken {
  id            Int       @id @default(autoincrement())
  usesr         User      @relation(fields: [clerkUserId], references: [clerkUserId])
  clerkUserId   String
  client_id     String
  client_secret String
  access_token  String?   @unique
  refresh_token String?   @unique
  expires_in    DateTime?
  profileId     String?   @unique

  @@index([clerkUserId])
}

model GithubToken {
  id            Int     @id @default(autoincrement())
  access_token  String  @unique
  refresh_token String? @unique
  user          User    @relation(fields: [clerkUserId], references: [clerkUserId])
  clerkUserId   String  @unique
  profileId     String? @unique

  expires_in               DateTime?
  refresh_token_expires_in DateTime?
  createdAt                DateTime  @default(now())
  updatedAt                DateTime  @updatedAt
}

model LinkedInToken {
  id                       Int       @id @default(autoincrement())
  profileId                String?
  access_token             String    @db.Text
  refresh_token            String?   @db.Text
  user                     User      @relation(fields: [clerkUserId], references: [clerkUserId])
  clerkUserId              String
  expires_in               DateTime?
  refresh_token_expires_in DateTime?
  createdAt                DateTime  @default(now())
  updatedAt                DateTime  @updatedAt

  @@index([clerkUserId])
}

enum SubscriptionType {
  FREE
}

model Subscription {
  id             String           @id @default(cuid())
  user           User             @relation(fields: [clerkUserId], references: [clerkUserId])
  clerkUserId    String           @unique
  customerUserId String
  transaction    Transaction      @relation(fields: [transactionId], references: [clerkUserId])
  transactionId  String
  type           SubscriptionType

  @@index([clerkUserId])
  @@index([transactionId])
}

model Transaction {
  id               String            @id @default(cuid())
  user             User              @relation(fields: [clerkUserId], references: [clerkUserId])
  clerkUserId      String            @unique
  amount           Int
  Subscription     Subscription[]
  status           TransactionStatus @default(PENDING)
  paymentDetails   Json?
  type             TransactionType
  refundStatus     RefundStatus?     @default(NOT_APPLICABLE)
  paymentGatewayId String
  createdAt        DateTime          @default(now())
  updatedAt        DateTime          @updatedAt
}

model Post {
  id            Int           @id @default(autoincrement())
  user          User          @relation(fields: [clerkUserId], references: [clerkUserId])
  clerkUserId   String        @unique
  status        Status
  scheduledAt   DateTime?
  content       Content[]
  createdAt     DateTime      @default(now())
  updatedAt     DateTime      @updatedAt
  TweetThread   TwitterThread[]
  Poll          Poll?

  @@index([clerkUserId])
}

model Content {
  id              Int            @id @default(autoincrement())
  postId          Post           @relation(fields: [id], references: [id])
  Platform        Platform
  token           String
  Twitter         TwitterThread? @relation(fields: [twitterThreadId], references: [id])
  imgUrls         Json
  poll            Poll?          @relation(fields: [pollId], references: [id])
  createdAt       DateTime       @default(now())
  updatedAt       DateTime       @updatedAt
  twitterThreadId Int
  pollId          Int?

  @@index([id])
  @@index([twitterThreadId])
  @@index([pollId])
}

model TwitterThread {
  id     Int    @id @default(autoincrement())
  tweet  Content[]
  post   Post   @relation(fields: [postId], references: [id])
  postId Int 

  @@index([postId])
}

model Idea {
  id          Int      @id @default(autoincrement())
  content     String
  user        User     @relation(fields: [clerkUserId], references: [clerkUserId])
  clerkUserId String   @unique
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@index([clerkUserId])
}

model Poll {
  id      Int       @id @default(autoincrement())
  postId  Int       @unique
  post    Post      @relation(fields: [postId], references: [id])
  options Json
  Content Content[]
}

model Queue {
  id          Int         @id @default(autoincrement())
  user        User        @relation(fields: [clerkUserId], references: [clerkUserId])
  clerkUserId String      @unique
  day         String
  items       QueueItem[]
}

model QueueItem {
  id      Int    @id @default(autoincrement())
  time    String
  type    String
  queue   Queue  @relation(fields: [queueId], references: [id])
  queueId Int

  @@index([queueId])
}

enum Platform {
  TWITTER
  LINKEDIN
  INSTAGRAM
  LENS_PROTOCOL
  FARCASTER
}

enum TransactionStatus {
  PENDING
  FAILED
  SUCCESSFUL
}

enum TransactionType {
  SUBSCRIPTION_PURCHASE
  REFUND
}

enum RefundStatus {
  NOT_APPLICABLE
  PENDING
  PROCESSED
}

enum Status {
  PUBLISHED
  SCHEDULED
}
