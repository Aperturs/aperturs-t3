{
  "extends": "@aperturs/tsconfig/nextjs.json",
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "~/*": ["./src/*"],
      "@api/*": ["../../packages/api/src/*"],
    },
    "plugins": [
      {
        "name": "next"
      }
    ],
    "tsBuildInfoFile": "node_modules/.cache/tsbuildinfo.json",
    "strictNullChecks": true
  },
  "include": [".", ".next/types/**/*.ts"],
  "exclude": ["node_modules"]
}
